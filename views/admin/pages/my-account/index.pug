extends ../../layouts/default.pug 


block main 
    h1(class = "mb-4") Thông tin cá nhân 

    if(user.avatar)
        img(srt=user.avatar alt = user.fullname width = "150px" class = "mb-3")
    else 
        img(src="/admin/images/user.png" alt = user.fullname width = "150px" class = "mb-3")

    if(user.fullname)
        p Họ tên: <b>#{user.fullname}</b>

    if(user.email)
        p Email: <b>#{user.email}</b>

    if(user.phone)
        p Số điện thoại: <b>#{user.phone}</b>
    
    p 
        span Trạng thái: 
        span 
            <b>#{user.status == "active" ? "Hoạt động" : "Dừng hoạt động"}</b>

    if(role.title)
        p Vai trò: <b>#{role.title}</b>

    a(
        href=`${prefixAdmin}/my-account/edit`
        class = "btn btn-primary"
    ) Chỉnh sửa thông tin