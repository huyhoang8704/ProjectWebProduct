extends ../../layouts/default.pug  
include ../../mixins/alert.pug

 

block main
    h1(class = "mb-4") Chi tiết sản phẩm của #{product.title}
    
    if(product.price)
        h1(class = "mb-4") Giá: <b>#{product.price}$</b>

    if(product.discountPercentage)
        h1(class = "mb-4") Discount Percentage: <b>#{product.discountPercentage}</b>

    if(product.stock)
        h1(class = "mb-4") Còn lại: <b>#{product.stock}</b>


    if(product.thumbnail)
        div(class = "mb-4")
            img(
                src = product.thumbnail
                style = "width: 100px"
            )

    if(product.status)
        div(class = "mb-4")
            span Trạng thái: 
            if(product.status === "active")
                span(class = "badge badge-success") Hoạt động
            else 
                span(class = "badge badge-danger") Dừng hoạt động
    
    if(product.position)
        div(class = "mb-4") Vị trí: <b>#{product.position}</b>
    
    if(product.description)
        div(class = "mb-4") Mô tả: <b>!{product.description}</b>

    a(class ="btn btn-warning" href =`${prefixAdmin}/products/edit/${product.id}`) Chỉnh sửa



    script(src="/admin/js/products.js") 


